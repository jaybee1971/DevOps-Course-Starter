#!/bin/bash
echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
docker build --cache-from $CACHE_IMAGE:latest --target todo-heroku --tag $CACHE_IMAGE:${TRAVIS_COMMIT} .
docker push $CACHE_IMAGE:${TRAVIS_COMMIT}
echo docker login --username=_ --password=$(heroku auth:token) registry.heroku.com
docker tag $CACHE_IMAGE:${TRAVIS_COMMIT} registry.heroku.com/$CACHE_IMAGE/web
docker push registry.heroku.com/$CACHE_IMAGE/web
